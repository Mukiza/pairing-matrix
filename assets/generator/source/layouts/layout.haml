<!doctype html>
%html
  %head
    %meta{:charset => "utf-8"}/
    / Always force latest IE rendering engine or request Chrome Frame
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    / Use title if it's in the page YAML frontmatter
    %title= data.page.title || "Pairing Matrix"
    = stylesheet_link_tag "base"
  %body{:class => page_classes}
    .masthead
      .content
        Pairing Matrix
    .page
      = yield
    // %script{:src => "http://code.jquery.com/jquery.min.js"}
    %script{:src => "/javascripts/lib/underscore.js"}
    %script{:src => "/javascripts/lib/angular/angular.js"}
    %script{:src => "/javascripts/lib/angular/angular-resource.js"}
    %script{:src => "/javascripts/app.js"}
    %script{:src => "/javascripts/services.js"}
    %script{:src => "/javascripts/controllers.js"}
